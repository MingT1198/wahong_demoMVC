@model wahong_demoMVC.VModels.UserVModel;@{    ViewData["Title"] = "Home Page";}<div class="text-center">    <div class="row">        <form method="post">            <label asp-for="User.UserName">姓名：</label>            <input asp-for="User.UserName" />            <label asp-for="User.Age">年齡：</label>            <input type="number" asp-for="User.Age" />            <label asp-for="User.Birthday">生日：</label>            <input type="date" asp-for="User.Birthday" />            <input type="hidden" asp-for="User.Id" />            <button>                @if (Model.User?.Id!=null)                {                    @:修改帳號                }                else                {                    @:建立帳號                }            </button>        </form>    </div>    <div class="row">        @if (Model.Users.Count > 0)        {            <table class="table">                <thead>                    <tr>                        <th>姓名</th>                        <th>年齡</th>                        <th>生日</th>                        <th></th>                    </tr>                </thead>                <tbody>                @foreach (var u in Model.Users)                {                    <tr>                        <td>@u.UserName</td>                        <td>@u.Age</td>                        <td>@u.Birthday</td>                        <td>                            <button class="updateUser" asp-controller="home" asp-action="index" asp-route-id="@u.Id" type="button">修改</button>                            <button class="delUser" asp-controller="home" asp-action="delete" data-id="@u.Id" type="button">刪除</button>                        </td>                    </tr>                }                </tbody>            </table>            <form id="myForm">                <input type="hidden" name="id">            </form>        }    </div></div>@section Scripts{    <script>        let updateelements = document.getElementsByClassName('updateUser');        for (let i = 0; i < updateelements.length; i++) {            updateelements[i].addEventListener("click", function (e) {                let form = document.getElementById("myForm");                form.action = e.target.formAction;                form.submit();            });        }        let delelements = document.getElementsByClassName('delUser');        for (let i = 0; i < delelements.length; i++) {            delelements[i].addEventListener("click", function (e) {                let form = document.getElementById("myForm");                form.action = e.target.formAction;                form.method = "post";                form.children[0].value = e.target.dataset.id;                form.submit();            });        }    </script>}